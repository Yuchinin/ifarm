<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/banner7"
    tools:context=".Main" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:background="@drawable/banner9"
                android:gravity="center"
                android:text="Developer"
                android:textSize="35dp" />

            <Button
                android:background="@drawable/banner8"
                android:id="@+id/btn1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/userlist"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/banner8"
                android:text="@string/orderlist"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/banner8"
                android:text="@string/actionlist"
                android:textColor="@android:color/black" />

            <Button
                android:layout_gravity="center"
                android:background="@drawable/banner8"
                android:id="@+id/btn4"
                android:textColor="@android:color/black"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/ready_plant" />

        </LinearLayout>
        
    </ScrollView>

</RelativeLayout>